<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-4 d-flex justify-content-end border-end" id="col-sidebar"><%- include ("partials/sidebar") %></div>
        <div class="col-4 border-end">
          <div class="mb-3"><a href="/profile/<%= loggedUser.username %>">
            <img
              id="avatar-home"
              src="/img/<%= loggedUser.avatar %>"
              alt="avatar"
              height="150px"
              width="150px"
          /></a>
          <form action="/tweet" method="post">
            <div class="mb-3">
              <textarea
                name="tweet"
                class="form-control"
                id="bio"
                rows="3"
                placeholder="¿Qué está pasando?"
              ></textarea>
              <button id="btn-tweet" type="submit" class="btn btn-primary rounded-pill mt-3">
                Tweet
              </button></div>
          
            </div>
          </form>
          <% for(const tweet of ownTweets) { %>
          <div class="mt-3 mb-3">
            <p><%= tweet.content %></p>
            <p><%= tweet.formattedDate %></p>
          </div>

          
          <% if (!tweet.likes.includes(loggedUser.id)) { %>
            <a style="color: rgb(255, 106, 196)" href="/like/<%= tweet._id %> "
              ><i class="far fa-heart"></i></a
              >
              <span style="color: rgb(255, 106, 196)"><%= tweet.likes.length %> </span>
              <% } else { %>
                <a style="color: rgb(255, 106, 196)" href="/like/<%= tweet._id %> "><i class="fas fa-heart"></i></a>
                <span style="color: rgb(255, 106, 196)"><%= tweet.likes.length %> </span>
                <% } %>
                
                <a class="ms-4" style="color: #1c9cf4;" href="/tweet/<%= tweet.id %>"><i class="fas fa-trash"></i></a>
                <hr />
          <% } %>

          
          <% for(const tweet of wantedTweets) { %>
            <div class="d-flex align-items-center">
              <a href="profile/<%= tweet.user.username %> ">
                <img src="/img/<%= tweet.user.avatar %>" alt="avatar" height="40px" width="40px"
              /></a>
              <div class="d-flex">
                <span> <p class="ms-2 mt-0 me-0 mb-0">@<%= tweet.user.username %> • <%= tweet.formattedDate %></p></span>  
              </div>
            </div>
          
         
          <p><%= tweet.content %></p>
         
          <% if (!tweet.likes.includes(loggedUser.id)) { %>
          <a style="color: rgb(255, 106, 196)" href="/like/<%= tweet._id %> "
            ><i class="far fa-heart"></i></a
          >
          <span style="color: rgb(255, 106, 196)"><%= tweet.likes.length %> </span>
          <% } else { %>
          <a style="color: rgb(255, 106, 196)" href="/like/<%= tweet._id %> "><i class="fas fa-heart"></i></a>
          <span style="color: rgb(255, 106, 196)"><%= tweet.likes.length %> </span>
          <% } %>
          <hr />
          <% } %>
        </div>
        <div class="col-4">
          <div id="whoToFollow"  > 
            <h5>Cuentas a seguir:</h5>
            <div>
              <div>
                <% for(const recommendedUser of recommendedUsers) { %>
                  <div class="mb-3 d-flex justify-content-between">
                    <div class="ms-3 align-items-center"><a href="profile/<%= recommendedUser.username %> ">
                      <img
                      id="avatar-colleft"
                        src="/img/<%= recommendedUser.avatar %> "
                        alt="avatar"
                        width="80px"
                        height="80px"
                      />
                      <p>@<%= recommendedUser.username %></p>
                    </a></div>
                  
                   
                  
                    <div class="me-5 d-flex align-items-center"> 
                      <a href="follow/<%= recommendedUser.username %> "
                      ><button class="btn btn-dark rounded-pill">Seguir</button></a>
                  </div>
                 </div>
                <% } %>
             </div>
           </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
